<configuration supports_adding_forbidden="true">

    <property>
        <name>hugegraph_user</name>
        <display-name>HugeGraph user</display-name>
        <value>hugegraph</value>
        <description>HugeGraph user</description>
        <property-type>USER</property-type>
        <value-attributes>
            <type>user</type>
            <overridable>false</overridable>
            <user-groups>
                <property>
                    <type>cluster-env</type>
                    <name>user_group</name>
                </property>
                <property>
                    <type>hugegraph-env</type>
                    <name>hugegraph_group</name>
                </property>
            </user-groups>
        </value-attributes>
    </property>

    <property>
        <name>hugegraph_group</name>
        <display-name>HugeGraph User Group</display-name>
        <value>hugegraph_group</value>
        <property-type>GROUP</property-type>
        <description>Hugegraph user group.</description>
    </property>

    <property>
        <name>hugegraph_log_dir</name>
        <display-name>HugeGraph log directory</display-name>
        <value>/var/log/hugegraph</value>
        <description>日志文件存储路径</description>
    </property>

    <property>
        <name>hugegraph_pid_dir</name>
        <display-name>HugeGraph pid directory</display-name>
        <value>/var/run/hugegraph</value>
        <description>HugeGraph pid directory</description>
    </property>


    <property>
        <name>hubble_log_dir</name>
        <display-name>Hubble log directory</display-name>
        <value>/var/log/hubble</value>
        <description>日志文件存储路径</description>
    </property>

    <property>
        <name>hubble_pid_dir</name>
        <display-name>Hubble pid directory</display-name>
        <value>/var/run/hubble</value>
        <description>Hubble pid directory</description>
    </property>



</configuration>